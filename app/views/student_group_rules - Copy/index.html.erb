<div class="container">
  <div class="sub_container_header">
    <h3>Group Rules</h3>
  </div>

  <div class="sub_container_base">

    Select the student group to view details for: <%= select "group", :id,StudentGroup.find(:all,:conditions=>["facilitator=?",current_user.username]).collect { |p| [p.name, p.id]}, {:selected => params[:id]},:include_blank=>true  %>
    <br/>
    <br/>
    <div id="rule_list">
       <table>
      <tr>
        <th>Group</th>
        <th>Rule</th>
        <th>Rule Description</th>
      </tr>

      <% @student_group_rules.each do |student_group_rule| %>
        <tr>
          <td><%=h student_group_rule.student_group.name %></td>
          <td><%=h student_group_rule.rule.name %></td>
          <td><%=h student_group_rule.rule.description %></td>
        </tr>
      <% end %>
    </table>

    <br />
    </div>

    <%= link_to 'Back to the Student Group', @student_group %>
  </div>
</div>
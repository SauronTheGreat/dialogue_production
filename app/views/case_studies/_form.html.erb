<% form_for @case_study do |f| %>
    <%= f.error_messages %>
    <table style="width:100%;border:none;font-size: small">
      <tr>
        <td style="background-image: none;border:none;">
          <table style="width:100%">
            <tr>
              <th><%= f.label :name %>:</th>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <th>
                <%= f.label :party_type %>:
              </th>
              <td>
                <%= f.radio_button :party_type, TRUE %>Two-party
                <%= f.radio_button :party_type, FALSE %>Multi-party
              </td>
            </tr>
            <tr>
              <th>
                <%= f.label :game_type %>:
              </th>
              <td>
                <%= f.radio_button :game_type, TRUE %>Integrative
                <%= f.radio_button :game_type, FALSE %>Distributive
              </td>
            </tr>
            <tr>
              <th>
                <%= f.label :issue_type %>:
              </th>
              <td>
                <%= f.radio_button :issue_type, TRUE %>Single Issue
                <%= f.radio_button :issue_type, FALSE %>Multi Issue
              </td>
            </tr>
            <tr>
              <th>
                <%= f.label :delivery_type %>:
              </th>
              <td>
                <%= f.radio_button :delivery_type, TRUE %>In-Class
                <%= f.radio_button :delivery_type, FALSE %>Extended
              </td>
            </tr>
            <tr>
              <th>
                <%= f.label :evaluation_type %>:
              </th>
              <td>
                <%= f.radio_button :eval_type, TRUE %>Offer-Based
                <%= f.radio_button :eval_type, FALSE %>Scorecard
              </td>
              <% if  current_user.admin %>
                  <% @x=0 %>
              <% else %>
                  <% @x=current_user.id %>
              <% end %>
              <%= f.hidden_field :case_study_type, :value=> @x.to_i %>



            </tr>
          </table>
          <p><%= f.submit %></p>
        </td>
        <td style="background-image: none;border:none;padding-left: 20px;">
          <p>
            <%= f.label :summary %><br/>
            <%= f.text_area :summary, :size=>"40x15" %>
          </p>

        </td>
      </tr>
    </table>

<% end %>

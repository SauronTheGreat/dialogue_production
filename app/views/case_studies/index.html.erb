                  <%= image_tag('/images/up_arrow.png', :style=>"width:15px;height:15px;") %>
                <% else %>
                  <%= image_tag('/images/down_arrow.png', :style=>"width:15px;height:15px;") %>
                <% end %>
              <% end %>
            </th>
            <th id="header"><%=sortable "game_type", "Game"%>

<h2><%=h @folder.name %></h2>

<table border="1">
  <tr>
    <th style="width:20%">From</th>
    <th style="width:60%">Subject</th>
    <th style="width:20%">Received</th>
  </tr>

  <% for message in @messages %>
    <tr>
      <td><%=h message.author.name %></td>
      <td><%= link_to h(message.subject), message_path(message,:active_game=>@active_game.id,:active_player=>@player.id) %></td>
      <td><%= distance_of_time_in_words(message.created_at, Time.now) %> ago</td>
    </tr>
  <% end %>
</table>

<%= will_paginate @messages %>

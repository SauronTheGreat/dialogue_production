<% content_for :head_banner do %>
  <img src="../images/isb_logo.jpg" alt="background" style="float:right;margin-top:5px;width:162px;height:61px"/>
  <span style="font-size:48px;font-weight: bolder">Dialogue</span><br/>
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;The Negotiation Platform
<% end %>

<div id="login_box" class="splash_container">
  <%= flash(:errors) %>
  <h2>Sign up</h2>

  <% form_for resource_name, resource, :url => registration_path(resource_name) do |f| -%>
    <%= f.error_messages %>
    <p><%= f.label :facilitator_group_id %><br/>
      <%= f.select :facilitator_group_id, FacilitatorGroup.find(:all).collect{|s| [s.name,s.id]} %></p>

    <p><%= f.label :username %><br/>
      <%= f.text_field :username %></p>

    <p><%= f.label :first_name %><br/>
      <%= f.text_field :first_name %></p>

    <p><%= f.label :last_name %><br/>
      <%= f.text_field :last_name %></p>

    <p><%= f.label :identifier %><br/>
      <%= f.text_field :identifier %></p>

    <p><%= f.label :email %><br/>
      <%= f.text_field :email %></p>

    <p><%= f.label :password %><br/>
      <%= f.password_field :password %></p>

    <p><%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation %></p>

    <p><%= f.label 'Is Admin?' %>
      <%= f.check_box :admin %></p>

    <p><%= f.label 'Is Educator?' %>
      <%= f.check_box :educator %></p>

    <p><%= f.submit "Sign up" %></p>
  <% end -%>

  <%= render :partial => "shared/devise_links" %>
</div>
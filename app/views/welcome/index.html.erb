<% elsif current_user.admin %>
    <table cellspacing="20px" style="width:75%;margin-left: 11%">
      <tr>
        <td style="width:20%;">
          <div id="client_library" class="menu_container" style="background-image:url('/images/icon_texture.jpg')">
            <a href="/clients" style="color:black;text-decoration: none;">
              <h3>Client <br/>Management</h3>
              <img src="/images/client_icon.png" alt="background" style="width:100px;height:100px;"/>
            </a>
          </div>
        </td>
        <td style="width:20%">
          <div id="facilitator_management" class="menu_container" style="background-image:url('/images/icon_texture.jpg')">
            <a href="/facilitator_groups" style="color:black;text-decoration: none;">
              <h3>Educator <br/>Management</h3>
              <img src="/images/fac.png" alt="background" style="width:100px;height:100px;"/>
            </a>
          </div>
        </td>
        <td style="width:20%;">
          <div class="menu_container" style="background-image:url('/images/icon_texture.jpg')">
            <a href="/users" style="color:black;text-decoration: none;">
